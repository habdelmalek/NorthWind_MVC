@model ApplicationLayer.DTOs.EmployeeDTO1

<div>

    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.LastName) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.FirstName) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.FirstName)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.Title) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.TitleOfCourtesy) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.TitleOfCourtesy)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.BirthDate) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.BirthDate)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.HireDate) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.HireDate)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    Address :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.Address)
                    <br>
                    @Html.DisplayFor(model => model.City)

                    <br>
                    @Html.DisplayFor(model => model.Region) ,
                    @Html.DisplayFor(model => model.PostalCode)

                    <br>
                    @Html.DisplayFor(model => model.Country)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.HomePhone) :
                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(model => model.HomePhone), Ext : @Html.DisplayFor(model => model.Extension)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.Notes) :
                </div>
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.Notes)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 font-weight-bolder">
                    @Html.DisplayNameFor(model => model.ReportsTo) :
                </div>
                <div class="col-md-4">

                    @{
                        var reportsTo = "";
                        if (Model.ReportsTo != null)
                        {
                            reportsTo = Model.Employee1.FirstName + " " + Model.Employee1.LastName;
                        }
                    }
                    @reportsTo
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))">
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeID }) 
    @*@Html.ActionLink("Back to List", "Index")*@
</p>